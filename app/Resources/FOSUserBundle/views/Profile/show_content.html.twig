{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="user-image">
        <img src="../../uploads/user/profilepics/{{ user.imageName }}"
             alt="image de {{ user.username }}" width="100">
    </div>
    <h2>{{ user.name }}</h2>
    <p><strong>{{ 'profile.show.username'|trans }}:</strong> {{ user.username }}</p>
    <p><strong>{{ 'profile.show.email'|trans }}:</strong> {{ user.email }}</p>
    <p><strong>Apropo de moi :</strong> {{ user.description }}</p>
    <p><strong>Age :</strong> {{ user.age }}</p>
</div>
{{ render(controller('AppBundle:Trip:tripForUser')) }}