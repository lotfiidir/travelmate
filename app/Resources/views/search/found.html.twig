<div class="col-md-4">
    {#<h3>{{  user.username}}</h3>#}
    <h4>{{ trip.title }}</h4>
    {% if (trip.imageTrip) %}
        <img class="col-md-4" src="{{ asset('uploads/imageTrips/' ~ trip.imageTrip) }}" alt="">
    {% endif %}
    <p>{{ trip.description[:100] }}</p>
    {% for dest in trip.destination %}
        <span>{{ dest }}</span>
    {% endfor %}
    <p>{{ trip.dateDeparture| date("d.m.Y") }}</p>
    <a href="trip/details/{{ trip.id }}" class="btn btn-primary">Voir</a>
</div>